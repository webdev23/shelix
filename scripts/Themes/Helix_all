  # Listing helix themes as JSON
  # Pushing a rocket force the (theme) selection directly.
  ls ~/.config/helix/runtime/themes/  | jq -R -s -c 'split("\n")[:-1] | map( split(".") | .[0] ) + ["ğŸš€"]'
