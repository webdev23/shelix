# Are we in a popup?
if [ -z "$TMUX_PANE" ]; then
  # notify "$TMUX_PANE"
  tmux splitw -v "tmux display-popup -C ; $1" 
  # tmux send "$1" Enter
  # "$1"
else
  # notify "$TMUX_PANE"
  tmux display-popup -h 80% -w 80% -E "$1"
fi

