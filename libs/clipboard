# Pass a command to STDIN to dispatch to all hx instances in the window
# ":theme "

 # mAKE SURE THE MARK IS AN EDITOR
#!/bin/bash

# First, check if the 'xclip' command exists
if ! command -v xclip >/dev/null; then
    echo "Error: xclip is not installed. Please install it to use this script." >&2
    exit 1
fi

# Check if standard input is connected to a terminal
if [ -t 0 ]; then
    # If it is a terminal, it means no data is being piped in.
    # Print a usage message to standard error and exit.
    echo "Usage: <command> | $(basename "$0")" >&2
    echo "Example: ls -l | $(basename "$0")" >&2
    exit 0
fi

# If we're here, data is being piped.
# Pipe STDIN directly to xclip.
# This is more efficient than storing it in a variable.
xclip -selection clipboard

# Optional: Add a notification to confirm success
# echo "Copied to clipboard." >&2
